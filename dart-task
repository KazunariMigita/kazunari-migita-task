import 'dart:math';


void main(){
  outputs();
  evenOrOdd();
  forloop();
  calculation(10, 20);
  
  
  
}

  
//1  print
// 整数を格納する変数を宣言して、値を代入して出力してください。
// 文字列を格納する変数を宣言して、値を代入して出力してください
// 小数を格納する変数を宣言して、値を代入して出力してください。

void outputs() {
  int num = 1;
  String str= "hello dart";
  double decNum = 0.1;
  print(num); 
  print(str);
  print(decNum);
}

//2 if-else
//与えられた数が偶数か奇数かを判定するDartのプログラムを作成してください。

void evenOrOdd() {
  Random random = Random();
  int randomNum = random.nextInt(100);
  String message;
  print("Number : $randomNum");
  
  if(randomNum % 2 == 0) {
    message = "even";
  } else {
    message = "odd";
  }
  
  print("This number is $message");
  
}

//3 for
// 1から10までの整数を表示するDartのプログラムを作成してください。
void forloop() {
  for(int i = 0; i < 10; i++) {
  print(i + 1);
  }
}

//4 function
// 2つの整数を受け取り、それらの数を加算して結果を返すDartのプログラムを作成してください。
// また、この関数を使用して、10と20を加算した結果を表示してください。

void calculation(int num1, int num2) {
  int result = num1 + num2;
  print("$num1 + $num2 = $result");
}






  





